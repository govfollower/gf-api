<!--<p>View for Show House Rep: typically displays a form that posts to #update action with attributes for a house rep model</p>  -->
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(:house_rep) do |f| %>
            
        <%= f.label :district_id %>
        <%= f.text_field :district_id %>

        <%= f.label :first_name %>
        <%= f.text_field :first_name %>

        <%= f.label :middle_name %>
        <%= f.text_field :middle_name %>

        <%= f.label :last_name %>
        <%= f.text_field :last_name %>
        
        <%= f.label :party %>
        <%= f.text_field :party %>

        <%= f.label :term_start_date %>
        <%= f.text_field :term_start_date %>

        <%= f.label :terms_served %>
        <%= f.text_field :terms_served %>

        <%= f.label :dob %>
        <%= f.text_field :dob %>
        
        <%= f.label :gender %>
        <%= f.text_field :gender %>

        <%= f.label :phone %>
        <%= f.text_field :phone %>

        <%= f.label :website_url %>
        <%= f.text_field :website_url %>

        <%= f.label :twitter_account %>
        <%= f.text_field :twitter_account %>
        
        <%= f.label :facebook_account %>
        <%= f.text_field :facebook_account %>

        <%= f.label :propublica_id %>
        <%= f.text_field :propublica_id %>

        <%= f.label :began_office_at %>
        <%= f.text_field :began_office_at %>

        <%= f.label :ended_office_at %>
        <%= f.text_field :ended_office_at %>

        <%= f.label :reelection_date %>
        <%= f.text_field :reelection_date %>

        <%= f.submit "Save Information", class: "btn btn-primary" %>
        <% end %>
    </div>    
</div>